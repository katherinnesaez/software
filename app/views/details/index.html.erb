<h1>Listando Detalles</h1>

<table>
  <thead>
    <tr>
      <th>Gasto</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.gasto %></td>
        <td><%= detail.descripcion %></td>
        <td><%= link_to 'Mostrar', detail %></td>
        <td><%= link_to 'Editar', edit_detail_path(detail) %></td>
        <td><%= link_to 'Eliminar', detail, method: :delete, data: { confirm: 'EstÃ¡ Seguro/a?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

