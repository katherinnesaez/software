<h1>Listando Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.nombre %></td>
        <td><%= client.edad %></td>
        <td><%= client.telefono %></td>
        <td><%= client.direccion %></td>
        <td><%= client.email %></td>
        <td><%= link_to '<Mostrar', client %></td>
        <td><%= link_to 'Editar', edit_client_path(client) %></td>
        <td><%= link_to 'Eliminar', client, method: :delete, data: { confirm: 'EstÃ¡ Seguro/a?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

