      <th>Fecha</th>
      <th>Disponibilidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.fecha %></td>
        <td><%= reservation.disponibilidad %></td>
        <td><%= link_to 'Mostrar', reservation %></td>
        <td><%= link_to 'Editar', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Eliminar', reservation, method: :delete, data: { confirm: 'EstÃ¡ Seguro/a?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

